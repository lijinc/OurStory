<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_linear_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        >
        <ImageView
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:id="@+id/thumbnail_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="MY STORY"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/thumbnail_img"
            android:layout_toEndOf="@+id/thumbnail_img" />

        <TextView
            android:id="@+id/author_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="lijin"
            android:textSize="18sp"
            android:layout_below="@+id/title_text"
            android:layout_toRightOf="@+id/thumbnail_img"
            android:layout_toEndOf="@+id/thumbnail_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/rating_txt"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:textColor="@android:color/holo_blue_light"
            android:layout_alignBottom="@+id/thumbnail_img"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@android:drawable/star_on"
            android:layout_toLeftOf="@id/rating_txt"
            android:layout_alignBottom="@+id/thumbnail_img"
            />


    </RelativeLayout>
</FrameLayout>